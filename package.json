{
  "name": "visual-prompt-builder",
  "version": "1.0.0",
  "description": "Visual Prompt Builder for generating AI image prompts",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "workers",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:worker": "npm run dev --workspace=workers",
    "dev:all": "concurrently \"npm run dev:worker\" \"npm run dev\"",
    "build": "npm run build:workers && npm run build:frontend",
    "build:shared": "echo 'Shared package does not require build'",
    "build:frontend": "npm run build --workspace=frontend",
    "build:workers": "npm run build --workspace=workers",
    "build:prod": "NODE_ENV=production npm run build",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test -- --run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:deployment": "PLAYWRIGHT_BASE_URL=$DEPLOYMENT_URL playwright test",
    "test:e2e:docker": "docker compose -f docker-compose.playwright.yml up --build",
    "playwright:install": "playwright install",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prepare": "husky",
    "analyze": "npm run build:frontend && npx vite-bundle-visualizer"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "visual-prompt",
    "ai",
    "prompt-builder",
    "cloudflare-workers",
    "react"
  ],
  "author": "Visual Prompt Builder Team",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@playwright/test": "^1.53.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "playwright": "^1.53.2",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  }
}
